<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="betianaminio.googleplacesexample.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_title"
            android:id="@+id/tx_place"
            android:gravity="center_horizontal"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:text="@string/text_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_place_name"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />

        <TextView
            android:text="@string/text_place_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_place_address"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:text="@string/text_place_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_place_phone_number"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:color/background_dark"
            android:id="@+id/img_place_photo"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_attribution"
            android:gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
